<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Remark Title -->
        <TextView
            android:id="@+id/remarkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remark Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <!-- Author -->
        <TextView
            android:id="@+id/remarkAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: John Doe"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_below="@id/remarkTitle"
            android:layout_marginBottom="6dp"/>

        <!-- Urgency Level -->
        <TextView
            android:id="@+id/remarkUrgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgency: 3/5"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@id/remarkAuthor"
            android:layout_marginBottom="6dp"/>

        <!-- Remark Preview (First 50 characters) -->
        <TextView
            android:id="@+id/remarkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a preview of the remark text..."
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/remarkUrgency"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
